{
    "manifest_version": 3,
    "name": "Auto Translate BuySellVouchers",
    "version": "2.0.0",
    "description": "Tự động dịch tin nhắn trên buysellvouchers.com",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://www.buysellvouchers.com/*",
        "https://buysellvouchers.com/*",
        "https://api.groq.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.buysellvouchers.com/*",
                "https://buysellvouchers.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Auto Translate BuySellVouchers",
        "default_icon": {
            "16": "icons.png",
            "48": "icons.png",
            "128": "icons.png"
        }
    },
    "icons": {
        "16": "icons.png",
        "48": "icons.png",
        "128": "icons.png"
    }
}